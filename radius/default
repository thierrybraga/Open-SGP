
server default {
    listen {
        type = auth
        ipaddr = *
        port = 0
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }
    listen {
        type = acct
        ipaddr = *
        port = 0
        limit {
            max_ppsim = 0
        }
    }

    authorize {
        filter_username
        preprocess
        chap
        mschap
        digest
        suffix
        eap {
            ok = return
        }
        files
        
        # Look for user in SQL
        sql
        
        # If user has Pool-Name attribute (from SQL group), assign IP
        if ("%{control:Pool-Name}") {
            sqlippool
        }
        
        pap
    }

    authenticate {
        Auth-Type PAP {
            pap
        }
        Auth-Type CHAP {
            chap
        }
        Auth-Type MS-CHAP {
            mschap
        }
        eap
    }

    preacct {
        preprocess
        acct_unique
        suffix
        files
    }

    accounting {
        detail
        unix
        
        # Log accounting to SQL
        sql
        
        # Manage IP lease in SQL pool
        if ("%{control:Pool-Name}") {
            sqlippool
        }
        
        exec
        attr_filter.accounting_response
    }

    session {
        sql
    }

    post-auth {
        # Commit IP allocation
        if ("%{control:Pool-Name}") {
            sqlippool
        }
        
        exec
        Post-Auth-Type REJECT {
            attr_filter.access_reject
        }
    }
}
