sql {
	driver = "rlm_sql_postgresql"
	dialect = "postgresql"

	# Connection info (templated by entrypoint):
	server = "@DB_HOST@"
	port = @DB_PORT@
	login = "@DB_USER@"
	password = "@DB_PASS@"
	radius_db = "@DB_NAME@"

	# Connection pool configuration
	pool {
		start = 10
		min = 10
		max = 50
		spare = 5
		uses = 0
		retry_delay = 30
		lifetime = 0
		idle_timeout = 60
	}

	# Client table configuration
	read_clients = yes
	client_table = "nas"

	# Table names (must match SGP models)
	authcheck_table = "radcheck"
	authreply_table = "radreply"
	groupcheck_table = "radgroupcheck"
	groupreply_table = "radgroupreply"
	usergroup_table = "radusergroup"

	# Accounting tables
	acct_table1 = "radacct"
	acct_table2 = "radacct"

	# Logging
	logfile = ${logdir}/sqltrace.sql
}
